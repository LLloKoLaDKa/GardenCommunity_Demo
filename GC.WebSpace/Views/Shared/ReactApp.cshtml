@using GC.WebSpace.Infrastructure.Version
@model             global::GC.WebSpace.Infrastructure.ReactApp.ReactApp
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.PageTitle</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/img/logo.ico")" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="@Url.Content("~/lib/font-awesome/css/all.css")" rel="stylesheet" />

    <script>
        var systemUser = @Html.Raw(Json.Serialize(Model.SystemUser));
        var sidebarLinksTree = @Html.Raw(Json.Serialize(Model.SidebarLinksTree));
        var availableAccessPolicies = @Html.Raw(Json.Serialize(Model.AvailableAccessPolicies));
        var payload = @Html.Raw(Json.Serialize(Model.Payload));
        </script>
</head>
<body>
    <div id="@Model.ContainerId">
    </div>

    <script src="@Url.Content("~/dist/vendor-react.js").WithVersion()" type="text/javascript"></script>
        <script src="@Url.Content("~/dist/vendor-all.js").WithVersion()" type="text/javascript"></script>
        <script src="@Url.Content("~/dist/vendor-content.js").WithVersion()" type="text/javascript"></script>
        <script src="@Url.Content("~/dist/vendor-shared.js").WithVersion()" type="text/javascript"></script>
        <script src="@Url.Content("~/dist/vendor-tools.js").WithVersion()" type="text/javascript"></script>
    <script src="@Url.Content($"~/dist/{Model.Name}.js").WithVersion()" type="text/javascript"></script>
</body>
</html>
